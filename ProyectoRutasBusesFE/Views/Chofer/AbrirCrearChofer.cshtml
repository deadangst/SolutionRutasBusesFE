@model ProyectoRutasBusesFE.Models.ChoferModel
@{ Layout = null; }

<div class="modal-header">
    <h4 class="modal-title" style="flex: 1; text-align: left;">Asignar Chofer</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<form asp-action="GuardarChofer" asp-controller="Chofer" method="post" onsubmit="return SubmitAddEdit(this)">
    <div class="box-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="choferID" />

        <div class="form-group">
            <label asp-for="usuarioID" class="control-label">Chofer</label>
            <select asp-for="usuarioID" class="form-control" asp-items="ViewBag.Usuarios"></select>
            <span asp-validation-for="usuarioID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="numeroEmpleado" class="control-label"></label>
            <input asp-for="numeroEmpleado" class="form-control" placeholder="Número de Empleado" />
            <span asp-validation-for="numeroEmpleado" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="rutaID" class="control-label">Ruta Asignada</label>
            <select asp-for="rutaID" class="form-control" asp-items="ViewBag.Rutas"></select>
            <span asp-validation-for="rutaID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="unidadID" class="control-label">Unidad Asignada</label>
            <select asp-for="unidadID" class="form-control" asp-items="ViewBag.Unidades"></select>
            <span asp-validation-for="unidadID" class="text-danger"></span>
        </div>
    </div>

    <div class="box-footer">
        <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-save"></i> Enviar</button>
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancelar</button>
    </div>
</form>
<script>Ladda.bind('.btn', { timeout: 1000 });</script>
