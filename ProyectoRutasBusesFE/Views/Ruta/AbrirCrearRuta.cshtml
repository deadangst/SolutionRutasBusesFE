@model ProyectoRutasBusesFE.Models.RutaModel
@{ Layout = null; }

<div class="modal-header">
    <h4 class="modal-title" style="flex: 1; text-align: left;">Agregar Ruta</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<form asp-action="GuardarRuta" asp-controller="Ruta" method="post" onsubmit="return SubmitAddEdit(this)">
    <div class="box-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="rutaID" />
        <div class="form-group">
            <label asp-for="nombreRuta" class="control-label"></label>
            <input asp-for="nombreRuta" class="form-control" />
            <span asp-validation-for="nombreRuta" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="precioPasaje" class="control-label"></label>
            <input asp-for="precioPasaje" class="form-control" />
            <span asp-validation-for="precioPasaje" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="cantidadParadas" class="control-label"></label>
            <input asp-for="cantidadParadas" class="form-control" />
            <span asp-validation-for="cantidadParadas" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="supervisorID" class="control-label"></label>
            <select asp-for="supervisorID" class="form-control" asp-items="ViewBag.Supervisores"></select>
            <span asp-validation-for="supervisorID" class="text-danger"></span>
        </div>
    </div>

    <div class="box-footer">
        <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-save"></i> Enviar</button>
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancelar</button>
    </div>
</form>
<script>Ladda.bind('.btn', { timeout: 1000 });</script>
