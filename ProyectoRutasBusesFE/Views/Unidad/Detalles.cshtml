@model IEnumerable<ProyectoRutasBusesFE.Models.UnidadModel>

@{
    ViewData["Title"] = "Detalles de Unidad";
}

<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                @foreach (var item in Model)
                {
                    var boxColorClass = item.estadoUnidad switch
                    {
                        "Disponible" => "bg-blue",
                        "EnRuta" => "bg-green",
                        "Accidentada" => "bg-red",
                        "EnReparacion" => "bg-yellow",
                        "Desechada" => "bg-black",
                        _ => "bg-gray"
                    };

                    var choferNombre = ViewBag.Choferes.ContainsKey(item.unidadID) ? ViewBag.Choferes[item.unidadID] : "Sin Asignar";

                    <div class="col-lg-4 col-md-6 col-sm-12">
                        <div class="small-box @boxColorClass">
                            <div class="inner">
                                <h3>@item.numeroPlaca</h3>
                                <p style="font-size: smaller;">
                                    <strong>Tipo de Motor: </strong>@item.tipoMotor<br />
                                    <strong>Estado: </strong>@item.estadoUnidad<br />
                                    <strong>Chofer: </strong>@choferNombre
                                </p>
                            </div>
                            <div class="icon">
                                <i class="fa fa-bus"></i>
                            </div>
                            <a href="@Url.Action("Index", "Ruta")" class="small-box-footer">
                                Volver <i class="fa fa-arrow-circle-left"></i>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
