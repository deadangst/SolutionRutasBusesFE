@using ProyectoRutasBusesFE.Models
@using ProyectoRutasBusesFE.Services
@inject IAuthenticatedUserService AuthenticatedUserService

@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var isRutaIndex = currentController == "Ruta" && currentAction == "Index";
}

<nav class="navbar navbar-expand-lg navbar-dark navbar-top @if (isRutaIndex) { <text>route-index</text> }">
    <button class="toggle-btn" onclick="toggleSidebar()">&#9776;</button>
    <a class="navbar-brand" asp-controller="Home" asp-action="Index"> | Transportes Steve</a>
    <div class="collapse navbar-collapse justify-content-end">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("CerrarSesion", "Autenticacion")">
                    <i class="fa fa-sign-out-alt"></i> Cerrar sesión
                </a>
            </li>
        </ul>
    </div>
</nav>
