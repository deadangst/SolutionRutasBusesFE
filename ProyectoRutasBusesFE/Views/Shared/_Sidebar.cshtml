@using ProyectoRutasBusesFE.Models
@using ProyectoRutasBusesFE.Services
@inject IAuthenticatedUserService AuthenticatedUserService

@{ var user = AuthenticatedUserService.GetAuthenticatedUser(); }

<div class="sidebar" id="sidebar">
    <h2>Navegación Principal</h2>

    @if (User.IsInRole("SuperAdmin") || User.IsInRole("Supervisor"))
    {
        <!-- Opciones para SuperAdmin y Supervisor -->
        <a asp-area="" asp-controller="Usuario" asp-action="Index"><i class="fa fa-users"></i> Gestión de Usuarios</a>
        <a asp-area="" asp-controller="Chofer" asp-action="Index"><i class="fa fa-id-badge"></i> Gestión de Choferes</a>
        <a asp-area="" asp-controller="Unidad" asp-action="Index"><i class="fa fa-bus"></i> Gestión de Unidades</a>
        <a asp-area="" asp-controller="Ruta" asp-action="DataTableRuta"><i class="fa fa-road"></i> Gestión de Rutas</a>
        <a asp-area="" asp-controller="Recaudacion" asp-action="Index"><i class="fa fa-money"></i> Gestión de Recaudaciones</a>
        <a asp-area="" asp-controller="Bitacora" asp-action="Index"><i class="fa fa-book"></i> Ver Bitácora</a>
        <a asp-area="" asp-controller="Unidad" asp-action="Mantenimiento"><i class="fa fa-wrench"></i> Mantenimientos</a>
        <a asp-area="" asp-controller="Ruta" asp-action="Index"><i class="fa fa-map-signs"></i> Rutas Asignadas</a>
    }

    @if (User.IsInRole("Mecanico"))
    {
        <!-- Opciones para Mecanico -->
        <a asp-area="" asp-controller="Unidad" asp-action="Mantenimiento"><i class="fa fa-wrench"></i> Mantenimientos</a>
    }

    @if (User.IsInRole("Chofer"))
    {
        <!-- Opciones para Chofer -->
        <a asp-area="" asp-controller="Ruta" asp-action="Index"><i class="fa fa-map-signs"></i> Rutas Asignadas</a>
    }

    <footer class="footer mt-auto">
        <div class="container text-center">
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="footer-link">
                <img src="~/images/Icon-bus.png" alt="Sobre el Proyecto" width="30" />
                &copy; 2024 - Steven Vega
            </a>
        </div>
    </footer>
</div>


<style>
    .sidebar {
        position: fixed;
        top: 60px;
        bottom: 0;
        width: 250px;
        background-color: #343a40;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
    }


        .sidebar a {
            padding: 10px 15px;
            text-decoration: none;
            font-size: 18px;
            color: #ddd;
            display: block;
        }

            .sidebar a:hover {
                color: #fff;
                background-color: #0056b3;
            }

        .sidebar footer {
            margin-top: auto;
            margin-bottom: 30px;
            padding: 10px 0;
            background-color: transparent;
        }

            .sidebar footer .container {
                color: #d3d3d3;
            }

            .sidebar footer .footer-link {
                color: #d3d3d3;
                display: flex;
                align-items: center;
                justify-content: center;
                text-decoration: none;
            }

                .sidebar footer .footer-link img {
                    margin-right: 8px;
                }

                .sidebar footer .footer-link:hover {
                    color: #fff;
                }
</style>

