<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoRutasBusesFE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/v/dt/dt-1.10.21/datatables.min.css" />
    <link rel="stylesheet" href="~/lib/toastr/toastr.min.css" />
    <link rel="stylesheet" href="~/lib/sweetalert/sweetalert.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 250px;
            position: fixed;
            z-index: 1;
            top: 60px;
            left: 0;
            background-color: #343a40;
            overflow-x: hidden;
            padding-top: 20px;
            color: white;
            transition: 0.3s;
        }

            .sidebar.hidden {
                width: 0;
                padding-top: 0;
                overflow: hidden;
            }

            .sidebar h2 {
                color: white;
                padding-left: 25px;
            }

            .sidebar a {
                padding: 15px 25px;
                text-decoration: none;
                font-size: 18px;
                color: #cfd8dc;
                display: block;
            }

                .sidebar a:hover {
                    background-color: #495057;
                    color: #ffffff;
                }

        .main-content {
            margin-left: 260px;
            padding: 20px;
            padding-top: 80px;
            transition: 0.3s;
        }

            .main-content.full-width {
                margin-left: 0;
            }

        .navbar-top {
            background-color: #0056b3;
            color: white;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 2;
        }

            .navbar-top .navbar-brand, .navbar-top .nav-link {
                color: white;
            }

                .navbar-top .nav-link:hover {
                    color: #cfd8dc;
                }

        .toggle-btn {
            font-size: 20px;
            cursor: pointer;
            background-color: #0056b3;
            color: white;
            border: none;
            padding: 10px 15px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark navbar-top">
        <button class="toggle-btn" onclick="toggleSidebar()">&#9776;</button>
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">ProyectoRutasBusesFE</a>
        <div class="collapse navbar-collapse justify-content-end">
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <img src="~/images/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image" width="30"> @User.Identity.Name
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                        <a class="dropdown-item" href="@Url.Action("UserProfile", "Config")">Perfil</a>
                        <a class="dropdown-item" href="@Url.Action("CerrarSesion", "Autenticacion")">Cerrar sesión</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    <div class="sidebar" id="sidebar">
        <h2>Navegación Principal</h2>
        <a asp-area="" asp-controller="Usuario" asp-action="Index"><i class="fa fa-users"></i> Gestión de Usuarios</a>
        <a asp-area="" asp-controller="Chofer" asp-action="Index"><i class="fa fa-id-badge"></i> Gestión de Choferes</a>
        <a asp-area="" asp-controller="Unidad" asp-action="Index"><i class="fa fa-bus"></i> Gestión de Unidades</a>
        <a asp-area="" asp-controller="Ruta" asp-action="Index"><i class="fa fa-road"></i> Gestión de Rutas</a>
        <a asp-area="" asp-controller="Recaudacion" asp-action="Index"><i class="fa fa-money"></i> Gestión de Recaudaciones</a>
        <a asp-area="" asp-controller="Bitacora" asp-action="Index"><i class="fa fa-book"></i> Ver Bitácora</a>
    </div>
    <div class="main-content" id="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
            @RenderSection("MainContent", required: false)
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ProyectoRutasBusesFE - <a asp-area="" asp-controller="Home" asp-action="About">Sobre el Proyecto</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-1.10.21/datatables.min.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script src="~/lib/sweetalert/sweetalert.min.js"></script>
    <script src="~/lib/marioizquierdo-jquery.serializeJSON/jquery.serializejson.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/scripts.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    <script type="text/javascript">
        function toggleSidebar() {
            var sidebar = document.getElementById("sidebar");
            var mainContent = document.getElementById("main-content");
            sidebar.classList.toggle("hidden");
            mainContent.classList.toggle("full-width");
        }
    </script>
</body>
</html>
