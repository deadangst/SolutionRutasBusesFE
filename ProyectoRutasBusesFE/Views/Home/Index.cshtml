@{
    ViewData["Title"] = "Bienvenido";
}

<h2>Bienvenido, @ViewBag.UserName</h2>

<div class="container">
    <div class="row">
        @foreach (var ruta in ViewBag.Rutas)
        {
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@ruta</h5>
                        <a href="@Url.Action("ConfigurarRuta", "Rutas", new { nombre = ruta })" class="btn btn-primary">Configurar Ruta</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
